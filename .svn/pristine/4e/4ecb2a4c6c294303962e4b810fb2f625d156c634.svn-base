{% load static %}

<html>
  <head>
    <title>HealthNet - Calendar</title>
    <link rel = "stylesheet" type = "text/css" href = "{% static "calendar_day.css" %}" />
  </head>
  <body>
    <div id="header">
      <a href="/"><div id="logo"></div></a>
      <div id="logout"><a href="/login/?logout=true">logout</a></div>
      <div id="menu">
        <a href="/"><div class="menu">Profile</div></a>
        <a href="/calendar/"><div class="menu">Calendar</div></a>
      </div>
    </div>
    <div id = "content">
      <div id = "title_div">
          {{ mname }} {{ day }}, {{ year }}
        <a href="{% url 'calender:month' year month %}"><div id="up"></div></a>
      </div>


      <!--This is the start of the form -->
      <form action="{% url 'calender:day' year month day %}" method="POST">
        {{ entries.management_form }}
        {% csrf_token %}
        {% for entry in entries.forms %}
          {{ entry.id }}
          <div class="field">
            <div class="field_title">
              <div class="field_title_div">
                Delete
              </div>
            </div>
            <div class="field_form">
              {{ entry.DELETE }}
            </div>
          </div>
          <div class="field">
            <div class="field_title">
              <div class="field_title_div">
                Patient
              </div>
            </div>
            <div class="field_form">
              {{ entry.patient }}
            </div>
          </div>
          <div class="field">
            <div class="field_title">
              <div class="field_title_div">
                Doctor
              </div>
            </div>
            <div class="field_form">
              {{ entry.doctor }}
            </div>
          </div>

          <div class="field">
            <div class="field_title">
              <div class="field_title_div">
                Title
              </div>
            </div>
            <div class="field_form">
              {{ entry.title }}
            </div>
          </div>
          <div class="field">
            <div class="field_title">
              <div class="field_title_div">
                Location
              </div>
            </div>
            <div class="field_form">
              {{ entry.location }}
            </div>
          </div>
          <div class="field">
            <div class="field_title">
              <div class="field_title_div">
                Snippet
              </div>
            </div>
            <div class="field_form">
              {{ entry.snippet }}
            </div>
          </div>
          <div class="field">
            <div class="field_title">
              <div class="field_title_div">
                Remind
              </div>
            </div>
            <div class="field_form">
              {{ entry.remind }}
            </div>
          </div>
          <div class="field">
            <div class="field_title">
              <div class="field_title_div">
                Body
              </div>
            </div>
            <div class="field_form">
              {{ entry.body }}
            </div>
          </div>
          <div class="horiz"></div>
        {% endfor %}
        <div id="bodgy_spacer"></div>
        <div id="menu">
          <input type="submit" value="SAVE" id="save" />
        </div>
      </form>
      <!--This is the end of the form-->


    </div>
  </body>
</html>
