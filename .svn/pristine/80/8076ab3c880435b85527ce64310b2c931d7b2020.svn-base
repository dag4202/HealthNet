a {
    text-decoration: none;
    color: inherit;
}

body {
    background: url(resources/background.png);
    margin: 0;
    min-width: 980px;
    font-family: sans-serif;
    color: #676767;
}

#header {
    position: relative;
    background-color: #91d5da;
    width: 960px;
    height: 120px;
    margin: auto;
    border-radius: 0 0 30px 30px;
    overflow: hidden;
    box-shadow: 0 0 5px #BBBBBB;
}

#logo {
    background: url(resources/logo.png);
    height: 32px;
    width: 189px;
    position: relative;
    top: 29px;
    left: 40px;
}

#logout {
    position: absolute;
    color: #FFF;
    margin: 10px 20px;
    top: 0;
    right: 0;
    cursor: pointer;
}

#logout:hover {
    text-decoration: underline;
}

#menu {
    position: absolute;
    background: #69beb4;
    height: 30px;
    width: 960px;
    bottom: 0px;
}

.menu {
    height: 30px;
    width: 480px;
    float: left;
    color: #FFF;
    padding-top: 5px;
    font-size: 20px;
    text-align: center;
}

.menu:hover {
    background: #91d5da;
}

#content {
    position: relative;
    background: #FFF;
    width: 960px;
    margin: 20px auto;
    border-radius: 30px;
    overflow: hidden;
    box-shadow: 0 0 5px #E8E8E8;
}

#title_div {
    position: relative;
    height: 28px;
    width: 960px;
    padding: 20px 0;
    text-align: center;
    font-size: 28px;
    border-bottom: 1px solid #000
}

#up {
    position: absolute;
    background: url(resources/back_calendar.png);
    height: 25px;
    width: 55px;
    top: 22px;
    left: 22px;
}

#up:hover {
    opacity: 0.8;
}

.horiz {
    position: absolute;
    background: #000;
    height: 1px;
    width: 540px;
    right: 50px;
}

#save {
    background: none;
    border: none;
}

#save {
    padding: 0;
    width: 960px;
    height: 100%;
    font-size: 18px;
    color: #FFF;
    border: none;
    background: none;
    cursor: pointer;
}

#save:hover {
    background: #91d5da;
}

.field {
    position: relative;
    width: 960px;
}

.field_title {
    position: absolute;
    background: #FCFCFC;
    height: 100%;
    width: 320px;
    text-align: right;
    border-right: solid 1px #DEDEDE;
}

.field_title_div {
    position: absolute;
    width: 280px;
    height: 16px;
    top: 50%;
    transform: translatey(-8px);
    padding: 0 20px;
    font-size: 16px;
}

.field_form {
    position: relative;
    left: 320px;
    width: 600px;
    padding: 10px 20px;
}

#bodgy_spacer {
    height: 14px;
}