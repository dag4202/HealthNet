body {
    background: url(resources/background.png);
    margin: 0;
    height: 100%;
    min-width: 980px;
    font-family: sans-serif;
    color: #676767;
    text-align: center;
}

#container {
    position: relative;
    height: 410px;
    width: 430px;
    margin: auto;
    top: 50%;
    transform: translatey(-50%);
}

#header {
    position: absolute;
    background-color: #91d5da;
    width: 430px;
    height: 90px;
    margin: auto;
    border-radius: 30px;
    overflow: hidden;
    box-shadow: 0 0 5px #BBBBBB;
}

#logo {
    background: url(resources/logo.png);
    height: 32px;
    width: 189px;
    position: relative;
    top: 29px;
    left: 120px;
}

#option_bar {
    position: absolute;
    background: #69beb4;
    height: 30px;
    width: 430px;
    bottom: 0px;
}

#content {
    position: absolute;
    background: #FFFFFF;
    min-height: 300px;
    width: 430px;
    margin: auto;
    border-radius: 30px;
    overflow: hidden;
    box-shadow: 0 0 5px #E8E8E8;
    bottom: 0;
}

#title {
    padding: 20px 0;
    margin: auto;
    font-size: 28px;
}

.horiz {
    height: 1px;
    width: 330px;
    margin-left: 50px;
    margin-bottom: 25px;
    background: #676767;
}

.form {
    height: 40px;
    width: 330px;
    margin-top: 20px;
    padding: 10px;
    border: 1px solid #676767;
    border-radius: 10px;
    font-size: 16px;
    text-align: center;
}

#login_failed {
    height: 50px;
    width: 430px;
    color: red;
}

.button {
    float: left;
    padding: 0;
    width: 215px;
    height: 100%;
    font-size: 18px;
    color: #FFF;
    border: 0px none;
    background: none;
    cursor: pointer;
}

.button:hover {
    background: #91d5da;
}